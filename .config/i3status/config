general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "disk /"
order += "wireless wlp1s0"
# order += "ethernet enp4s0"
order += "cpu_usage"
order += "memory"
order += "tztime local"
order += "tztime waterloo"
order += "battery 0"
 
disk / {
    format = "DISK: %percentage_used (%total)"
}

wireless wlp1s0 {
        format_up = "W:%quality %bitrate"
        format_down = "W: down"
}

ethernet enp4s0 {
        format_up = "E: %speed"
        format_down = "E: down"
}

tztime local {
        format = "%y-%m-%d %H:%M %Z"
}

tztime waterloo {
        format = "%y-%m-%d %H:%M %Z"
        timezone = "America/Toronto"
}

cpu_temperature 0 {
        format = "TEMP: %degrees Â°C"
        path = "/sys/class/hwmon/hwmon0/temp1_input"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "MEM: %percentage_used (%total)"
}

